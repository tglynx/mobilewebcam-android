    <CheckBoxPreference
		android:key="store_gps"
		android:title="GPS"
		android:summary="Add GPS coordinates to picture files (EXIF)."
	    android:defaultValue="false"/>

  </PreferenceCategory>	
		
</PreferenceScreen>